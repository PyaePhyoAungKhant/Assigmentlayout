<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F7E80"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/ex3txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="#D5D4D8"
        android:padding="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/package_shipping"/>
    <ImageView
        android:id="@+id/ex3imageview1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="#D5D4D8"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ex3txt1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ex3layout1"
        android:src="@drawable/box"
        android:layout_marginTop="5dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ex3layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#D5D4D8"
        android:baselineAligned="@id/ex3imageview1"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/ex3imageview1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ex3txt1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="200dp"
            android:paddingTop="15dp"
            android:text="1.50Kg"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="weight/ piece"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="20cm*15cm*10cm"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="size/ piece"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Ships out Within 5days"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="weight/ piece"
            android:textSize="15sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.cardview.widget.CardView
        android:id="@+id/ex3cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ex3imageview1">

        <TextView
            android:id="@+id/ex3txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:text="Ship Address"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:paddingTop="40dp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/ex3txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deliver Method"
        android:background="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/ex3cardview1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/ex3txt4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:text="Deivery Time"
        android:padding="10sp"
        android:background="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/ex3txt3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ex3txt5"/>
    <TextView
        android:id="@+id/ex3txt5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:text="Cost"
        android:padding="19sp"
        android:background="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/ex3txt3"
        app:layout_constraintLeft_toRightOf="@id/ex3txt4"
        app:layout_constraintRight_toLeftOf="@id/ex3txt6"/>
    <TextView
        android:id="@+id/ex3txt6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="6"
        android:text="Tracking carries"
        android:padding="19sp"
        android:background="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/ex3txt3"
        app:layout_constraintLeft_toRightOf="@id/ex3txt5"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/ex3txt7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="#FFFFFF"
        android:padding="18dp"
        android:text="8-15 Days"
        android:textSize="15sp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ex3txt8"
        app:layout_constraintTop_toBottomOf="@id/ex3txt4" />
    <TextView
        android:id="@+id/ex3txt8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_weight="2"
        android:text="Ks-5000"
        android:padding="19sp"
        android:background="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/ex3txt5"
        app:layout_constraintLeft_toRightOf="@id/ex3txt7"
        app:layout_constraintRight_toLeftOf="@id/ex3txt9"/>
    <TextView
        android:id="@+id/ex3txt9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_weight="3"
        android:text="MGL Delivery"
        android:padding="19sp"
        android:background="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/ex3txt6"
        app:layout_constraintLeft_toRightOf="@id/ex3txt8"
        app:layout_constraintRight_toLeftOf="@+id/ex3btn1"/>

    <ImageButton
        android:id="@+id/ex3btn1"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:padding="17sp"
        android:src="@drawable/ic_correct"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/ex3txt9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex3txt6" />
    <TextView
        android:id="@+id/ex3txt10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#FFFFFF"
        android:padding="18dp"
        android:text="5-10 Days"
        android:textSize="15sp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ex3txt11"
        app:layout_constraintTop_toBottomOf="@id/ex3txt7" />
    <TextView
        android:id="@+id/ex3txt11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_weight="2"
        android:text="Ks-32000"
        android:padding="19sp"
        android:background="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/ex3txt8"
        app:layout_constraintLeft_toRightOf="@id/ex3txt10"
        app:layout_constraintRight_toLeftOf="@id/ex3txt12"/>
    <TextView
        android:id="@+id/ex3txt12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_weight="3"
        android:text="DHL"
        android:padding="19sp"
        android:background="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/ex3txt9"
        app:layout_constraintLeft_toRightOf="@id/ex3txt11"
        app:layout_constraintRight_toLeftOf="@+id/ex3btn2"/>

    <ImageButton
        android:id="@+id/ex3btn2"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:padding="17sp"
        android:src="@drawable/ic_right"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/ex3txt12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex3txt9" />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#FFFFFF"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent">
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginRight="20dp"
       android:background="#FF0303"
       android:text="Apply"
       android:textColor="#FFFFFF"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"/>

    
</androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>