<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/onlineshop">
    <TextView
        android:id="@+id/ex5text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_in_to_your_account"
        android:layout_marginStart="15dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginTop="230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
   <EditText
       android:id="@+id/ex5edittext5"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="15dp"
       android:layout_marginTop="20dp"
       android:layout_marginEnd="15dp"
       android:padding="10dp"
       android:hint="@string/phone_number"
       android:background="#08B7CD"
       android:textColorHint="#FFFFFF"
       app:layout_constraintTop_toBottomOf="@id/ex5text1"
       app:layout_constraintLeft_toLeftOf="parent"
       android:autofillHints=""
       android:inputType="text" />
    <view
        android:id="@+id/ex5view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/ex5edittext5"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/ex5edittext6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:hint="@string/pass_word"
        android:background="#08B7CD"
        android:textColorHint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/ex5view1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:autofillHints=""
        android:inputType="text" />
    <view
        android:id="@+id/ex5view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/ex5edittext6"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/ex5btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:text="LOG IN"
        android:textColor="#FFFFFF"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ex5view2"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/ex5text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or connect with "
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:padding="40dp"
        app:layout_constraintTop_toBottomOf="@id/ex5btn1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <view
        android:id="@+id/ex5view3"
        android:layout_width="1dp"
        android:layout_height="107dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@id/ex5text2"
        app:layout_constraintTop_toBottomOf="@id/ex5btn1" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ex5layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ex5btn1"
        app:layout_constraintLeft_toRightOf="@+id/ex5view3"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_facebook" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FaceBook"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_google_plus" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gmail"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#FFFFFF"
           android:text="Forget Password?"
           android:textSize="20sp"
           android:layout_gravity="center"
           android:padding="20dp"/>
        <view
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="create new account"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:padding="10dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>