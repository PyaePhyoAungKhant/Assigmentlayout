<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="75dp"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dog"/>

    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btn1message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_message_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btn2message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_library_books_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1message"
        android:layout_margin="20dp"/>
    android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btn3message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_settings_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn2message"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/txtndog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jack Jack"
        android:textSize="15sp"
        android:textColor="#FDFDFD"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintLeft_toLeftOf="@id/card1"/>
    <TextView
        android:id="@+id/txtlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FDFDFD"
        android:textSize="15sp"
        android:text="Level:"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@+id/txtndog"
        app:layout_constraintLeft_toLeftOf="@id/card1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E30E0E"
        android:textSize="15sp"
        android:text="4"
        android:layout_marginLeft="90dp"
        app:layout_constraintTop_toBottomOf="@+id/txtndog"
        app:layout_constraintLeft_toLeftOf="@id/card1"/>
    <TextView
        android:id="@+id/txtpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E30E0E"
        android:textSize="15sp"
        android:text="Exp Point:"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txtlevel"
        app:layout_constraintLeft_toLeftOf="@id/card1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFCFC"
        android:textSize="15sp"
        android:text="4000"
        android:layout_marginLeft="110dp"
        app:layout_constraintTop_toBottomOf="@+id/txtlevel"
        app:layout_constraintLeft_toLeftOf="@id/card1"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F6FA"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtpoint"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">
        <ImageView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/box"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Status"
            android:textSize="20dp"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"/>
        <Button
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_keyboard_arrow_down_24"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEBF1"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintLeft_toLeftOf="parent">
    <TextView
        android:id="@+id/txtulities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ultilities"
        android:textAlignment="center"
        android:background="#F7F6FA"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />
        <androidx.cardview.widget.CardView
         android:id="@+id/cardview1"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="2"
         android:layout_width="120dp"
         android:layout_height="100dp"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toLeftOf="@id/cardview2"
         app:layout_constraintTop_toBottomOf="@id/txtulities">
         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/ic_baseline_view_list_24"
             android:layout_gravity="center"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="Mywistlist"
             android:textSize="15sp"
             android:layout_marginTop="80dp"
             android:layout_marginLeft="30dp"/>
     </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toRightOf="@id/cardview1"
            app:layout_constraintRight_toLeftOf="@id/cardview3"
            app:layout_constraintTop_toBottomOf="@id/txtulities" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_account_balance_wallet_24"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="80dp"
                android:text="My Followed Seller"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview3"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toRightOf="@id/cardview2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtulities" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_inbox_24"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="My Purchases Item"
                android:textSize="12sp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview4"
            android:layout_width="120dp"
            android:layout_height="100dp"
           app:layout_constraintRight_toLeftOf="@id/cardview5"
           app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview1" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_coupon"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="My Coupons"
                android:textSize="15sp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview5"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toRightOf="@id/cardview4"
            app:layout_constraintRight_toLeftOf="@id/cardview6"
            app:layout_constraintTop_toBottomOf="@id/cardview2" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_wallet"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="80dp"
                android:text="My Wallet"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview6"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toRightOf="@id/cardview5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview3" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_atm"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:text="Exp Point"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview7"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:layout_constraintRight_toLeftOf="@id/cardview8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview4" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_feedback_24"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="My Given Feedbacks"
                android:textSize="10sp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview8"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toRightOf="@id/cardview7"
            app:layout_constraintRight_toLeftOf="@id/cardview9"
            app:layout_constraintTop_toBottomOf="@id/cardview5" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_history_24"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Histroy"
                android:textSize="15sp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview9"
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toRightOf="@id/cardview8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview6" >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_calendar"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Events and calander"
                android:textSize="10sp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtaddress"
            android:layout_width="355dp"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:textSize="25sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnrightarrow"
            app:layout_constraintTop_toBottomOf="@id/cardview7" />

        <Button
            android:id="@+id/btnrightarrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/txtaddress"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview7" />
        <TextView
            android:id="@+id/txtpayment"
            android:layout_width="355dp"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:text="Payment Method"
            android:textSize="25sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnrightarrowpay"
            app:layout_constraintTop_toBottomOf="@id/txtaddress" />

        <Button
            android:id="@+id/btnrightarrowpay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/txtpayment"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnrightarrow" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>